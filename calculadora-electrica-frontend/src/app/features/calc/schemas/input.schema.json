{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Calculadora Electrica RD - Input",
    "type": "object",
    "required": [
        "surfaces",
        "consumptions"
    ],
    "properties": {
        "system": {
            "type": "object",
            "properties": {
                "voltage": {
                    "type": "number",
                    "default": 120
                },
                "phases": {
                    "type": "integer",
                    "enum": [
                        1,
                        3
                    ],
                    "default": 1
                },
                "frequency": {
                    "type": "number",
                    "default": 60
                }
            }
        },
        "surfaces": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "area_m2"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "area_m2": {
                        "type": "number",
                        "minimum": 0.1
                    }
                }
            }
        },
        "consumptions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "environment",
                    "power_w"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "environment": {
                        "type": "string"
                    },
                    "power_w": {
                        "type": "number",
                        "minimum": 1
                    },
                    "fp": {
                        "type": "number",
                        "minimum": 0.1,
                        "maximum": 1.0
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "iluminacion",
                            "toma_general",
                            "electrodomestico",
                            "climatizacion",
                            "especial"
                        ],
                        "default": "electrodomestico"
                    }
                }
            }
        }
    }
}

